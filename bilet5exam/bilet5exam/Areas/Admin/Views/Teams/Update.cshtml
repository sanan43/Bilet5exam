@model UpdateTeamVM
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description">
                Create Team Member
            </p>
            <div asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Name</label>
                    <input asp-for="Surname" class="form-control" placeholder="Surname">
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position">Name</label>
                    <input asp-for="Position" class="form-control" placeholder="Position">
                    <span asp-validation-for="Position"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobDescription">Name</label>
                    <input asp-for="JobDescription" class="form-control" placeholder="JobDescription">
                    <span asp-validation-for="JobDescription"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Name</label>
                    <input asp-for="Image" class="form-control" placeholder="Image">
                    <span asp-validation-for="Image"></span>
                </div>

                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" asp-area="Admin" asp-controller="Teams" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>


